/*---
esid: sec-performeval-rules-in-initializer
path: language/statements/class/fields-derived-cls-direct-
name: direct eval
---*/

class A {}

var executed = false;
class C extends A {
  x = eval('executed = true; /*{ initializer }*/;');
}

assert.throws(/*{ earlyerror }*/, function() {
  new C();
});

assert.sameValue(executed, false);
